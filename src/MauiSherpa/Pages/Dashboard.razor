@page "/"
@using MauiSherpa.Core.ViewModels
@using MauiSherpa.Core.Interfaces
@inject DashboardViewModel ViewModel
@inject ICopilotContextService CopilotContext

<h1><i class="fas fa-home"></i> @ViewModel.Title</h1>
<p class="welcome">@ViewModel.WelcomeMessage</p>

<div class="quick-actions">
    <a href="doctor" class="action-btn doctor">
        <i class="fas fa-stethoscope action-icon"></i>
        <span>Doctor</span>
    </a>
    <a href="settings" class="action-btn settings">
        <i class="fas fa-cog action-icon"></i>
        <span>Settings</span>
    </a>
    <button class="action-btn copilot" @onclick="OpenCopilot">
        <i class="fas fa-robot action-icon"></i>
        <span>Copilot</span>
    </button>
</div>

<div class="dashboard-cards">
    <div class="card android-card">
        <div class="card-header">
            <i class="fab fa-android card-icon"></i>
            <h3>Android</h3>
        </div>
        <p>Manage Android SDK, devices, and emulators</p>
        <div class="card-links">
            <a href="android-sdk" class="card-link">
                <i class="fas fa-cube"></i> SDK Packages
            </a>
            <a href="devices" class="card-link">
                <i class="fas fa-mobile-alt"></i> Devices
            </a>
            <a href="emulators" class="card-link">
                <i class="fas fa-desktop"></i> Emulators
            </a>
        </div>
    </div>
    
    <div class="card apple-card">
        <div class="card-header">
            <i class="fab fa-apple card-icon"></i>
            <h3>Apple</h3>
        </div>
        <p>Manage Apple certificates, profiles, and devices</p>
        <div class="card-links">
            <a href="bundle-ids" class="card-link">
                <i class="fas fa-fingerprint"></i> Bundle IDs
            </a>
            <a href="apple-devices" class="card-link">
                <i class="fas fa-mobile-alt"></i> Devices
            </a>
            <a href="certificates" class="card-link">
                <i class="fas fa-certificate"></i> Certificates
            </a>
            <a href="profiles" class="card-link">
                <i class="fas fa-id-card"></i> Provisioning Profiles
            </a>
            <a href="root-certificates" class="card-link">
                <i class="fas fa-shield-alt"></i> Root Certificates
            </a>
        </div>
    </div>
</div>

<style>
    h1 {
        margin-bottom: 10px;
        font-size: 32px;
        color: var(--text-primary);
    }

    p.welcome {
        margin-bottom: 24px;
        font-size: 18px;
        color: var(--text-secondary);
    }

    .quick-actions {
        display: flex;
        gap: 12px;
        margin-bottom: 32px;
    }

    .action-btn {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px 20px;
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        text-decoration: none;
        color: var(--text-primary);
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .action-btn:hover {
        background: var(--bg-hover);
        border-color: var(--text-muted);
        transform: translateY(-1px);
    }

    .action-btn.doctor { border-left: 3px solid var(--accent-success); }
    .action-btn.settings { border-left: 3px solid var(--text-muted); }
    .action-btn.copilot { border-left: 3px solid var(--accent-purple); }

    .action-icon { font-size: 16px; opacity: 0.8; }

    .dashboard-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 24px;
    }

    .card {
        background: var(--card-bg);
        border-radius: 12px;
        padding: 24px;
        box-shadow: var(--card-shadow);
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 12px;
    }

    .card-icon { font-size: 28px; }

    .card h3 {
        margin: 0;
        font-size: 22px;
        color: var(--text-primary);
    }

    .card > p {
        margin: 0 0 20px 0;
        color: var(--text-muted);
        font-size: 14px;
    }

    .android-card { border-top: 3px solid var(--accent-success); }
    .android-card .card-icon { color: var(--accent-success); }
    
    .apple-card { border-top: 3px solid var(--accent-indigo); }
    .apple-card .card-icon { color: var(--accent-indigo); }

    .card-links {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .card-link {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 16px;
        background: var(--bg-tertiary);
        border-radius: 8px;
        text-decoration: none;
        color: var(--text-primary);
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .card-link:hover {
        background: var(--bg-hover);
        transform: translateX(4px);
    }

    .card-link i {
        font-size: 14px;
        width: 18px;
        text-align: center;
        opacity: 0.7;
    }
</style>

@code {
    private void OpenCopilot()
    {
        CopilotContext.OpenOverlay();
    }
}
