@page "/apple-tools"
@using MauiSherpa.Core.ViewModels
@inject AppleToolsViewModel ViewModel

<h1><i class="fab fa-apple"></i> @ViewModel.Title</h1>

<div class="status-bar">
    <span class="status-label">Status:</span>
    <span class="status-text">@ViewModel.StatusMessage</span>
</div>

<div class="controls">
    <button class="btn-primary" @onclick="LoadData" disabled="@ViewModel.IsLoading">
        @(ViewModel.IsLoading ? "Loading..." : "Load Tools Information")
    </button>
</div>

<style>
    h1 {
        margin-bottom: 1.25rem;
        font-size: 2rem;
        color: #2d3748;
    }

    .status-bar {
        background: white;
        padding: 1rem 1.25rem;
        border-radius: 0.5rem;
        margin-bottom: 1.25rem;
        box-shadow: 0 2px 0.25rem rgba(0, 0, 0, 0.1);
    }

    .status-label {
        font-weight: 600;
        color: #2d3748;
        margin-right: 0.625rem;
    }

    .status-text {
        color: #4a5568;
    }

    .controls {
        margin-top: 1.25rem;
    }

    .btn-primary {
        padding: 0.75rem 1.5rem;
        background-color: #4299e1;
        color: white;
        border: none;
        border-radius: 0.375rem;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

    .btn-primary:hover:not(:disabled) {
        background-color: #3182ce;
    }

    .btn-primary:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }
</style>

@code {
    private async Task LoadData()
    {
        await ViewModel.LoadAsync();
    }
}
