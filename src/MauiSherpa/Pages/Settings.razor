    private async Task DisposeModalAsync(string modalId)
    {
        _activeModals.Remove(modalId);
        try { await JS.InvokeVoidAsync("modalInterop.dispose", modalId); } catch { }
    }

    [JSInvokable]
    public void OnEscapePressed()
    {
        if (showPublisherDialog) ClosePublisherDialog();
        else if (showProviderDialog) CloseProviderDialog();
        else if (showIdentityDialog) CloseIdentityDialog();
        else if (showImportDialog) CloseImportDialog();
        else if (showExportDialog) CloseExportDialog();
        InvokeAsync(StateHasChanged);
    }
}
