    .setting-item select {
        padding: 8px 12px;
        border: 1px solid var(--border-color);
        border-radius: 6px;
        font-size: 14px;
        cursor: pointer;
        min-width: 150px;
    }

    .setting-item select:focus { outline: none; border-color: var(--accent-primary); }

    .actions { display: flex; gap: 12px; }

